{
  "name": "now-ci",
  "version": "0.0.1",
  "description": "An ephemeral CI tool for javascript apps",
  "author": "Sam Garson <samtgarson@gmail.com>",
  "private": false,
  "scripts": {
    "dev": "nodemon --harmony server.js",
    "build": "nuxt build",
    "start": "NODE_ENV=production node --harmony server.js",
    "precommit": "npm run lint",
    "lint": "xo"
  },
  "dependencies": {
    "axios": "^0.15.3",
    "debounce": "^1.0.0",
    "dotenv": "^4.0.0",
    "github": "^8.2.1",
    "github-oauth": "^0.2.2",
    "micro": "^6.2.1",
    "micro-method-router": "^0.1.0",
    "micro-route": "^2.2.0",
    "micro-visualize": "^3.0.0",
    "node-session": "^1.2.1",
    "now-logs": "^0.0.7",
    "nuxt": "latest",
    "pify": "^2.3.0"
  },
  "devDependencies": {
    "babel-eslint": "^7.1.1",
    "bulma": "^0.3.1",
    "eslint": "^3.13.1",
    "eslint-config-samtgarson": "^0.0.5",
    "eslint-plugin-html": "^1.7.0",
    "eslint-plugin-promise": "^3.4.0",
    "font-awesome": "^4.7.0",
    "node-sass": "^4.5.0",
    "nodemon": "^1.11.0",
    "pug": "^2.0.0-beta11",
    "sass-loader": "^5.0.1",
    "xo": "^0.17.1"
  },
  "now": {
    "env": {
      "GITHUB_CLIENT": "@ci_github_client",
      "GITHUB_SECRET": "@ci_github_secret",
      "SECRET_KEY": "@ci_secret_key"
    }
  },
  "main": "server.js",
  "repository": "samtgarson/now-ci",
  "license": "MIT",
  "xo": {
    "extends": "samtgarson",
    "envs": [
      "node",
      "browser"
    ],
    "extensions": [
      ".vue"
    ],
    "plugins": [
      "html",
      "promise"
    ],
    "parser": "babel-eslint"
  }
}
