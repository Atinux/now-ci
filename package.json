{
  "name": "now-ci",
  "version": "0.0.1",
  "description": "An ephemeral CI tool for javascript apps",
  "author": "Sam Garson <samtgarson@gmail.com>",
  "private": false,
  "scripts": {
    "dev": "node --harmony-async-await server.js",
    "build": "nuxt build",
    "start": "NODE_ENV=production node server.js",
    "precommit": "npm run lint",
    "lint": "xo"
  },
  "dependencies": {
    "axios": "^0.15.3",
    "micro": "^6.2.1",
    "micro-route": "^2.2.0",
    "nuxt": "latest"
  },
  "devDependencies": {
    "babel-eslint": "^7.1.1",
    "eslint": "^3.13.1",
    "eslint-config-samtgarson": "^0.0.5",
    "eslint-plugin-html": "^1.7.0",
    "eslint-plugin-promise": "^3.4.0",
    "nodemon": "^1.11.0",
    "xo": "^0.17.1"
  },
  "main": "server.js",
  "repository": "samtgarson/now-ci",
  "license": "MIT",
  "xo": {
    "extends": "samtgarson",
    "envs": [
      "node",
      "browser"
    ],
    "extensions": [
      ".vue"
    ],
    "plugins": [
      "html",
      "promise"
    ],
    "parser": "babel-eslint"
  }
}
